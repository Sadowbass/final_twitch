<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mm">


<select id='login' parameterType='MemberVo' resultType='boolean'>
	    select case 
	               when count(mId)>0 then 1
	               else 0
	           end result
	    from   member 
	    where  mem_Id=#{mem_mId} and mem_pwd=#{mem_pwd}      
	   
	</select>
	</mapper>